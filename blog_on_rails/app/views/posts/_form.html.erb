<%= form_for @post do |f| %>
  <% if @post.errors.present? %>
    <% @post.errors.full_messages.each do |m| %>
      <div class="alert alert-warning" role="alert"><%= m %></div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, size: "60x12", class: "form-control" %>
  </div>
  <%= f.submit "Save", class: "btn btn-dark" %>
<% end %>