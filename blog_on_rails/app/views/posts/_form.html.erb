<%= form_for @post do |f| %>
  <% if @post.errors.present? %>
    <p>
      <%= @post.errors.full_messages.join(", ") %>
    </p>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, size: "60x12", class: "form-control" %>
  </div>
  <%= f.submit "Create", class: "btn btn-dark" %>
<% end %>